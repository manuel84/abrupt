{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["website"],
    "properties": {
        "website": {
            "description": "Website as root element",
            "required": ["domain", "url"],
            "type": "object",
            "properties": {
                "domain": {
                    "description": "Domain",
                    "required": true,
                    "type": "string"
                },
                "url": {
                    "description": "All Pages as Objects",
                    "type": "array",
                    "minItems": 1,
                    "required": true,
                    "items": {
                        "description": "Page Item",
                        "type": "object",
                        "required": ["name", "state"],
                        "properties": {
                            "name": {
                                "description": "URL name",
                                "type": "string",
                                "required": true
                            },
                            "state": {
                                "description": "State",
                                "type": "object",
                                "required": ["name", "readability"],
                                "properties": {
                                    "name": {
                                        "description": "State name",
                                        "type": "string",
                                        "required": true
                                    },
                                    "readability": {
                                        "description": "",
                                        "type": "object",
                                        "required": ["readability", "syllables", "words", "numberOfLinks", "bigwords", "sentences", "language"],
                                        "properties": {
                                            "readability": {
                                                "description": "float",
                                                "type": "number",
                                                "minimum": 4,
                                                "maximum": 15,
                                                "required": true
                                            },
                                            "syllables": {
                                                "description": "",
                                                "type": "integer",
                                                "required": true
                                            },
                                            "words": {
                                                "description": "",
                                                "type": "integer",
                                                "required": true
                                            },
                                            "numberOfLinks": {
                                                "description": "",
                                                "type": "integer",
                                                "required": true
                                            },
                                            "bigwords": {
                                                "description": "",
                                                "type": "integer",
                                                "required": true
                                            },
                                            "sentences": {
                                                "description": "",
                                                "type": "integer",
                                                "required": true
                                            },
                                            "language": {
                                                "description": "",
                                                "type": "string",
                                                "required": true
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
